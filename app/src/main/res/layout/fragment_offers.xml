<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OffersFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:layout_margin="70sp"
        android:rowCount="3">

        <Button
            android:layout_width="100sp"
            android:layout_height="109sp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="0"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="20sp"
            android:background="@color/lightgray"
            android:drawableTop="@drawable/hospital"
            android:foregroundGravity="center"
            android:gravity="bottom"
            android:text="Hospitals"
            android:textAlignment="center"
            android:textColor="@color/colorAccent">

        </Button>

        <Button
            android:layout_width="100sp"
            android:layout_height="109sp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="0"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="20sp"
            android:background="@color/lightgray"
            android:drawableTop="@drawable/doctor"
            android:foregroundGravity="center"
            android:gravity="bottom"
            android:text="Doctors"
            android:textAlignment="center"
            android:textColor="@color/colorAccent">

        </Button>

        <Button
            android:layout_width="100sp"
            android:layout_height="109sp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="0"
            android:background="@color/lightgray"
            android:drawableTop="@drawable/idcard"
            android:foregroundGravity="center"
            android:gravity="bottom"
            android:text="Memberships"
            android:textAlignment="center"
            android:textColor="@color/colorAccent">

        </Button>

        <Button
            android:layout_width="100sp"
            android:layout_height="109sp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="0"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="20sp"
            android:background="@color/lightgray"
            android:drawableTop="@drawable/donation"
            android:foregroundGravity="center"
            android:gravity="bottom"
            android:text="Support Us"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            tools:ignore="HardcodedText">

        </Button>

    </GridLayout>


</FrameLayout>