<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Blog"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="3"
android:layout_margin="70sp"        >

        <Button
            android:layout_columnWeight="0"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="20sp"
            android:layout_width="100sp"
            android:layout_height="109sp"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@color/lightgray"
            android:text="Articls"
            android:textColor="@color/colorAccent"
            android:gravity="bottom"
            android:textAlignment="center"
            android:foregroundGravity="center"
            android:drawableTop="@drawable/content">

        </Button>
        <Button
            android:layout_columnWeight="0"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="20sp"
            android:layout_width="100sp"
            android:layout_height="109sp"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@color/lightgray"
            android:text="Events"
            android:textColor="@color/colorAccent"
            android:gravity="bottom"
            android:textAlignment="center"
            android:foregroundGravity="center"
            android:drawableTop="@drawable/calendar">

        </Button>
        <Button
            android:layout_columnWeight="0"
            android:layout_width="100sp"
            android:layout_height="109sp"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@color/lightgray"
            android:text="Training"
            android:textColor="@color/colorAccent"
            android:gravity="bottom"
            android:textAlignment="center"
            android:foregroundGravity="center"
            android:drawableTop="@drawable/presentation">

        </Button>
        <Button
            android:layout_columnWeight="0"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="20sp"
            android:layout_width="100sp"
            android:layout_height="109sp"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@color/lightgray"
            android:text="Q&amp;A"
            android:textColor="@color/colorAccent"
            android:gravity="bottom"
            android:textAlignment="center"
            android:foregroundGravity="center"
            android:drawableTop="@drawable/conversation"
            tools:ignore="HardcodedText">

        </Button>

    </GridLayout>


</FrameLayout>