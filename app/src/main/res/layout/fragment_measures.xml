<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Measures">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:padding="20sp"
        android:rowCount="4"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="-60dp">

        <GridLayout

            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="65sp"
            android:layout_marginBottom="65sp"
            android:columnCount="2"
            android:rowCount="3"


            >

            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginTop="11sp"
                android:src="@drawable/heart1">

            </ImageView>

            <TextView
                android:layout_row="1"
                android:layout_column="1"
                android:text="BPM">

            </TextView>

            <TextView
                android:id="@+id/heartbeat"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:layout_column="0"
                android:text="84"
                android:textSize="40sp">

            </TextView>

            <TextView
                android:id="@+id/hertbeat"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:text="HeartBeat"
                android:textSize="20sp"
                android:textStyle="bold">

            </TextView>
        </GridLayout>

        <GridLayout
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="12sp"
            android:layout_marginRight="65sp"
            android:layout_marginBottom="65sp"
            android:columnCount="2"
            android:rowCount="2">

            <ImageView
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_row="0"
                android:layout_column="1"
                android:src="@drawable/health"></ImageView>

            <TextView
                android:layout_row="0"
                android:layout_column="0"
                android:text="Stable"
                android:textSize="30sp"
                android:textStyle="bold"

                >

            </TextView>

            <TextView
                android:layout_row="1"
                android:layout_column="0"
                android:text="ECG"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

        </GridLayout>

        <GridLayout
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="65sp"
            android:columnCount="2"
            android:rowCount="2">

            <ImageView
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_row="0"
                android:layout_column="1"
                android:src="@drawable/celsius"></ImageView>

            <TextView
                android:id="@+id/temp"
                android:layout_row="0"
                android:layout_column="0"
                android:text="37"
                android:textSize="30sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_columnSpan="2"
                android:text="Tempreture"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>
        </GridLayout>

        <GridLayout
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="65sp"
            android:layout_marginBottom="65sp">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_row="0"
                android:layout_column="1"
                android:src="@drawable/blood" />

            <TextView
                android:id="@+id/textView2"
                android:layout_row="0"
                android:layout_column="0"
                android:text="130/85"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView44"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:text="Blood Pressure"
                android:textSize="20sp"
                android:textStyle="bold" />

        </GridLayout>

        <GridLayout
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="65sp"
            android:layout_marginBottom="65sp">

            <ImageView
                android:id="@+id/imageView45"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_row="0"
                android:layout_column="1"
                android:src="@drawable/hiker" />


            <TextView
                android:id="@+id/textView88"
                android:layout_row="0"
                android:layout_column="0"
                android:text="Safe"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:text="Motion"
                android:textSize="20sp"
                android:textStyle="bold" />

        </GridLayout>

        <GridLayout
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="65sp"
            android:layout_marginBottom="65sp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="25dp"
                android:layout_height="24dp"
                android:layout_row="0"
                android:layout_column="1"
                android:src="@drawable/oxygen" />

            <TextView
                android:id="@+id/spo2"
                android:layout_row="0"
                android:layout_column="0"
                android:text="90%"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/textView7"
                android:layout_width="80dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:text="SPO2"
                android:textSize="20sp"
                android:textStyle="bold" />
        </GridLayout>

        <GridLayout
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginLeft="71sp"
            android:columnCount="2"
            android:rowCount="1">

            <TextView
                android:id="@+id/s"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Status :"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/Status"
                android:text="Good"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="24sp" />

        </GridLayout>


    </GridLayout>


</android.support.constraint.ConstraintLayout>
